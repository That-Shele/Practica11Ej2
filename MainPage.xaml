    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="triangulo.jpg"
                HeightRequest="185"
                WidthRequest="200"
                Aspect="AspectFit"
                />

            <Entry Placeholder="Ingrese la base del triángulo"
                   HorizontalOptions="Center"
                   WidthRequest="400"
                   x:Name="eBase"/>

            <Entry Placeholder="Ingrese la altura del triángulo"
                   HorizontalOptions="Center"
                   WidthRequest="400"
                   x:Name="eAltura"/>

            <Entry Placeholder="Área"
                   HorizontalOptions="Center"
                   WidthRequest="400"
                   x:Name="eArea"/>

            <Button
                    x:Name="CounterBtn"
                    Text="Calcular área" 
                    Clicked="CounterBtn_Clicked"
                    HorizontalOptions="Center"
                    WidthRequest="350"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
